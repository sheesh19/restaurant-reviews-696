<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Stars:</strong>
  <%= @restaurant.stars %>
</p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %> | <%= link_to "Remove", review_path(review), method: :delete %>
    </li>
  <% end %>

</ul>




<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> | 
<%= link_to 'Chef', chef_restaurant_path(@restaurant) %> | 
<%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %>
